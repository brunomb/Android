<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_weight="1"
    android:background="#ffff">

    <TextView
        android:id="@+id/tv_title_dialog_delete_station"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="21dp"
        android:text="Apagar zona?"
        android:textColor="@color/black"
        android:textSize="22sp"
        android:layout_weight="0.2"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_weight="0.6">

        <TextView
            android:id="@+id/tv_delete_station_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="24dp"
            android:layout_marginTop="26dp"
            android:textColor="@color/text_second_color"
            android:textSize="20sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:gravity="right"
        android:orientation="horizontal"
        android:layout_marginBottom="24dp"
        android:layout_marginRight="24dp"
        android:layout_weight="0.2">

        <Button
            android:id="@+id/bt_cancel_delete_station_dialog"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:background="@android:color/transparent"
            android:clickable="true"
            android:text="@string/dialog_cancel"
            android:textColor="@color/action"
            android:textSize="20sp"
            android:layout_marginRight="24dp"
            android:layout_gravity="bottom"/>

        <Button
            android:id="@+id/bt_delete_station_dialog"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:background="@android:color/transparent"
            android:clickable="true"
            android:textColor="@color/action"
            android:text="@string/dialog_ok"
            android:textSize="20sp"
            android:layout_gravity="bottom"/>
    </LinearLayout>
</LinearLayout>